extends ../layout.pug

block contenido
    .container-fluid.mt-4
        .mx-auto(style="max-width: 90%;")
            a.btn.btn-secondary.mb-3(href=`/agendas/`)
                i.bi.bi-arrow-left.me-2
                | Volver
            h1.text-center.mb-4.text-primary.fw-bold Calendario de Turnos
            input(type="hidden" name="id" id="agendaId" value=agenda.id)
            
            #calendar(style="background: white; border-radius: 15px; padding: 20px; box-shadow: 0 0 15px rgba(0,0,0,0.1);")

    script(src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js")
    script(src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/locales-all.global.min.js")
    script.
        document.addEventListener('DOMContentLoaded', function () { //Espera a que el contenido HTML del documento se haya cargado completamente antes de ejecutar la funci√≥n interna.
          const calendarEl = document.getElementById('calendar'); //Espera a que el contenido HTML del documento se haya cargado completamente antes de ejecutar la funci√≥n interna.
          const diasNoLaborales = !{JSON.stringify(diasNoLaborales)}; //Convierte el array de d√≠as no laborales a una cadena JSON para su uso en JavaScript.
          const turnosPorFecha = !{JSON.stringify(turnos)}; //Convierte el objeto de turnos por fecha a una cadena JSON para su uso en JavaScript.
          const user = !{JSON.stringify(usuario)}; //Convierte el objeto usuario a una cadena JSON para su uso en JavaScript.
          let ultimaFechaVisible = null;
          let ultimoBotonPresionado = null;
          const fechasFeriadas = !{JSON.stringify(fechasNoLaborales)}; //Convierte el array de fechas no laborales a una cadena JSON para su uso en JavaScript.
          const calendar = new FullCalendar.Calendar(calendarEl, { //Crea una nueva instancia de FullCalendar en el contenedor calendarEl, pas√°ndole una configuraci√≥n personalizada como segundo argumento.
            initialView: 'dayGridMonth', //Define la vista predeterminada como mes en formato de cuadr√≠cula de d√≠as.
            locale: 'es', //Establece el idioma del calendario en espa√±ol.
            themeSystem: 'bootstrap5', //Utiliza Bootstrap 5 para el estilo visual del calendario.
            headerToolbar: { //Define los botones del encabezado:
              left: 'prev,next today', //
              center: 'title', //
              right: 'dayGridMonth,timeGridWeek' // da las opciones para cambiar entre vistas de mes y semana.
            },
            buttonText: { //Traducci√≥n de los textos de botones
              today: 'Hoy',
              month: 'Mes',
              week: 'Semana',
              day: 'D√≠a',
              list: 'Lista'
            },
            // üü¢ Escuchamos clics manualmente en botones de navegaci√≥n
            customButtons: {
              prev: {
                text: '‚Üê',
                click: function () {
                  ultimoBotonPresionado = 'prev';
                  calendar.prev();
                }
              },
              next: {
                text: '‚Üí',
                click: function () {
                  ultimoBotonPresionado = 'next';
                  calendar.next();
                }
              },
              today: {
                text: 'Hoy',
                click: function () {
                  ultimoBotonPresionado = 'today';
                  calendar.today();
                }
              }
            },
            datesSet: function(info) {
              if (ultimoBotonPresionado !== 'next') {
                return;
              }
                const agendaId = document.getElementById('agendaId').value;
                const a√±o = info.start.getFullYear();
                const mes = String(info.start.getMonth() + 2).padStart(2, '0'); // meses van de 0 a 11
                const fechaInicioMes = `${a√±o}-${mes}-01`;


                if (!agendaId || !fechaInicioMes) return;

               

                const url = `/agendas/${agendaId}/mes/${fechaInicioMes}`;
                console.log("Llamando a:", url);

                fetch(url)
                  .then(response => {
                    console.log("STATUS RESPONSE:", response.status);
                    if (!response.ok) throw new Error('Error al verificar o crear turnos del mes');
                    return response.json();
                  })
                  .then(data => {
                    console.log('Respuesta al crear/verificar turnos:', data);
                    window.location.reload(); // O actualizar los datos si no quer√©s recargar
                  })
                  .catch(error => {
                    console.error('Error:', error);
                  });
                
            },
            dateClick: function (info) { //Funci√≥n que se ejecuta al hacer clic en una fecha del calendario.
              const fecha = info.dateStr;
              const diaSemana = info.date.getDay(); //Obtiene el d√≠a de la semana de la fecha seleccionada (0-6, donde 0 es domingo).
              const agendaId = document.getElementById('agendaId').value;
              const hoy = new Date().toISOString().split('T')[0]; //Obtiene la fecha actual en formato YYYY-MM-DD.
              if (fecha < hoy) { //Si la fecha seleccionada es anterior a hoy, muestra una alerta.
                Swal.fire({
                  icon: 'error',
                  title: 'Fecha inv√°lida',
                  text: 'No se pueden seleccionar fechas pasadas.',
                  confirmButtonText: 'Aceptar',
                  confirmButtonColor: '#dc3545'
                });
                return;
              }
              if (fechasFeriadas.includes(fecha)) { //Si la fecha seleccionada es un feriado, muestra una alerta.
                Swal.fire({
                  icon: 'info',
                  title: 'Feriado',
                  text: 'No se pueden generar turnos en d√≠as no laborables.',
                  confirmButtonText: 'Aceptar',
                  confirmButtonColor: '#ffc107'
                });
                return;
              }
              if (diasNoLaborales.includes(diaSemana)) { //Si el d√≠a seleccionado no es laborable, muestra una alerta.
                Swal.fire({ 
                  icon: 'info',
                  title: 'Dia no laborable',
                  text: 'El doctor no atiende este d√≠a.',
                  confirmButtonText: 'Aceptar',
                  confirmButtonColor: '#ffc107' });
                return;
            }
              window.location.href = `/agendas/${agendaId}/turnos/${fecha}`;
            },
            dayCellDidMount: function (info) {
              const fechaCelda = info.date.toISOString().split('T')[0];   // YYYY‚ÄëMM‚ÄëDD

              /* 1. Pintar feriados */
              if (fechasFeriadas.includes(fechaCelda)) {
                info.el.style.backgroundColor = '#9083dbff';
                info.el.style.color           = '#a00';
                info.el.style.fontWeight      = 'bold';
              }

              /* 2. Mostrar cantidad de turnos */
              if (turnosPorFecha[fechaCelda]) {
                const { libres, reservados } = turnosPorFecha[fechaCelda];
              if (libres > 0) {
                info.el.style.backgroundColor = '#a6e474ff'; // Color de fondo para d√≠as sin turnos
              } else  {
                info.el.style.backgroundColor = '#ec8a8aff'; // Color de fondo para d√≠as con turnos
              }
                const contenedor = document.createElement('div');
                contenedor.style.fontSize  = '0.75rem';
                contenedor.style.marginTop = '4px';
                let html = `<span style="color:#198754;">‚úîÔ∏è Libres: ${libres}</span><br>`;

                  if (user.rol != 'usuario') {
                    html += `<span style="color:#dc3545;">‚ùå Ocupados: ${reservados}</span>`;
                  }

                  contenedor.innerHTML = html;
                  info.el.appendChild(contenedor);
                }
            },

            
            height: 'auto',
            selectable: true,
            dayMaxEvents: true,
             // 
          });

          calendar.render();
        })
    style.
      #calendar {
        transition: all 0.3s ease-in-out;
      }
      .fc-toolbar-title {
        font-size: 1.8rem;
        color: #0d6efd;
      }
