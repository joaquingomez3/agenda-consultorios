extends ../layout.pug

block contenido
    .container.mt-5
        button.btn.btn-secondary.mb-4(onclick='history.back()')
            i.bi.bi-arrow-left.me-2
            | Volver

        .row.justify-content-center
            .col-md-8.col-lg-6
                .card.shadow
                    .card-header.bg-primary.text-white.text-center
                        h4.mb-0 Editar Datos del Doctor

                    .card-body
                        if errores
                            .alert.alert-danger
                                ul.mb-0
                                    each error in errores
                                        li= error

                        form(action="/doctores/actualizar" method="post")
                            input(type="hidden", name="id", value=doctor.id)

                            .mb-3
                                label.form-label(for="nombre") Nombre Completo:
                                input.form-control(type="text", name="nombre", id="nombre", value=doctor.nombre_completo, placeholder="Ej: Dr. Juan Pérez")

                            .mb-3
                                label.form-label(for="telefono") Teléfono:
                                input.form-control(type="text", name="telefono", id="telefono", value=doctor.telefono, placeholder="Ej: 2664-XXXXXX")

                            .mb-3
                                label.form-label(for="dni") DNI:
                                input.form-control(type="text", name="dni", id="dni", value=doctor.dni, placeholder="Ej: 30123456")

                            .mb-3
                                label.form-label(for="mail") Correo Electrónico:
                                input.form-control(type="text", name="mail", id="mail", value=doctor.mail, placeholder="Ej: doctor@email.com")

                            .mb-3
                                label.form-label(for="domicilio") Domicilio:
                                input.form-control(type="text", name="domicilio", id="domicilio", value=doctor.domicilio, placeholder="Ej: Av. San Martín 123")

                            button.btn.btn-success.w-100(type="submit")
                                i.bi.bi-save-fill.me-1
                                | Guardar Cambios
