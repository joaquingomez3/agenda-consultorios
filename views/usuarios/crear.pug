extends ../layout.pug

block contenido
    .container.mt-5
        button.btn.btn-secondary.mb-4(onclick='history.back()')
            i.bi.bi-arrow-left.me-2
            | Volver

        h2.text-center.text-primary.mb-4 Crear Usuario

        if errores
            .alert.alert-danger
                ul.mb-0
                    each err in errores
                        li= err

        .row.justify-content-center
            .col-md-8.col-lg-6
                .card.shadow
                    .card-body
                        form(method="POST" action="/usuarios/crear")
                            .mb-3
                                label.form-label(for="nombre") Nombre Completo
                                input.form-control(type="text", name="nombre", id="nombre", required)

                            .mb-3
                                label.form-label(for="dni") DNI
                                input.form-control(type="text", name="dni", id="dni", required)

                            .mb-3
                                label.form-label(for="obraSocial") Obra Social
                                input.form-control(type="text", name="obraSocial", id="obraSocial", required)

                            .mb-3
                                label.form-label(for="tel") Teléfono
                                input.form-control(type="tel", name="tel", id="tel", required)

                            .mb-3
                                label.form-label(for="nombre_usuario") Nombre de Usuario
                                input.form-control(type="text", name="nombre_usuario", id="nombre_usuario", value=nombre_usuario || '', required)

                            .mb-3
                                label.form-label(for="contrasenia") Contraseña
                                input.form-control(type="password", name="contrasenia", id="contrasenia", required)

                            .mb-3
                                label.form-label(for="nuevaContrasenia") Repetir Contraseña
                                input.form-control(type="password", name="nuevaContrasenia", id="nuevaContrasenia", required)

                            button.btn.btn-success.w-100(type="submit")
                                i.bi.bi-person-plus-fill.me-1
                                | Crear Usuario
