extends ../layout.pug

block contenido
    .container
        h1.text-center Editar mi perfil

        

        .row.justify-content-center.mt-4
            .col-md-6
                .card.shadow-sm.border-0
                    .card-body
                        form(action="/usuarios/editar/" method="POST")
                            
                            .mb-3
                                label.form-label(for="nombre") Nombre Usuario
                                input.form-control(type="text" id="nombreUsuario" name="nombreUsuario" value=usuario.nombre_usuario required)
                            .mb-3
                                label.form-label(for="dni") DNI
                                input.form-control(type="text" id="dni" name="dni" value=usuario.dni required)
                            .mb-3
                                label.form-label(for="nombre") Nombre Completo
                                input.form-control(type="text" id="nombre" name="nombre" value=paciente.nombre_completo required)
                            .mb-3
                                label.form-label(for="obraSocial") Obra Social
                                input.form-control(type="text" id="obraSocial" name="obraSocial" value=paciente.obra_social)
                            .mb-3
                                label.form-label(for="telefono") Tel√©fono
                                input.form-control(type="tel" id="tel" name="tel" value=paciente.datos_contacto required)
                            button.btn.btn-primary(type="submit") Guardar Cambios