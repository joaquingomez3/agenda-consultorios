extends ../layout.pug

block contenido
    .container.mt-5
        button.btn.btn-secondary.mb-4(onclick='history.back()')
            i.bi.bi-arrow-left.me-2
            | Volver

        .row.justify-content-center
            .col-md-8.col-lg-6
                .card.shadow
                    .card-header.bg-primary.text-white.text-center
                        h4.mb-0 Editar Paciente

                    .card-body
                        if errores
                            .alert.alert-danger
                                ul.mb-0
                                    each error in errores
                                        li= error

                        form(action="/pacientes/actualizar" method="post")
                            input(type="hidden", name="id", value=paciente.id)

                            .mb-3
                                label.form-label(for="nombre") Nombre Completo:
                                input.form-control(type="text", name="nombre", id="nombre", value=paciente.nombre_completo, placeholder="Ej: Juan Pérez")

                            .mb-3
                                label.form-label(for="dni") DNI:
                                input.form-control(type="text", name="dni", id="dni", value=paciente.dni, placeholder="Ej: 30123456")

                            .mb-3
                                label.form-label(for="motivoConsulta") Motivo de Consulta:
                                input.form-control(type="text", name="motivoConsulta", id="motivoConsulta", value=paciente.motivo_consulta, placeholder="Opcional")

                            .mb-3
                                label.form-label(for="obraSocial") Obra Social:
                                input.form-control(type="text", name="obraSocial", id="obraSocial", value=paciente.obra_social, placeholder="Ej: OSDE, IOMA, etc.")

                            .mb-3
                                label.form-label(for="contacto") Teléfono:
                                input.form-control(type="tel", name="contacto", id="contacto", value=paciente.datos_contacto, placeholder="Ej: 2664-XXXXXX")

                            button.btn.btn-success.w-100(type="submit")
                                i.bi.bi-save-fill.me-1
                                | Guardar Cambios
